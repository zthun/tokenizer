{
  "name": "@zthun/tokenizer",
  "version": "1.0.0",
  "description": "An application used to replace dictionary tokens in files.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/tokenizer"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "tokenizer": "./dist/cli.js"
  },
  "scripts": {
    "clean": "rimraf dist reports *.tgz *.log",
    "lint": "lint-janitor",
    "test": "jest --coverage",
    "build": "tsc -p tsconfig.bin.json",
    "make": "yarn clean && yarn lint && yarn test && yarn build",
    "package": "yarn publish",
    "release": "yarn version && yarn make && yarn package",
    "debug": "node --inspect-brk -r ts-node/register src/cli",
    "start": "ts-node src/cli.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/**"
  ],
  "dependencies": {
    "chalk": "^4.1.0",
    "lodash": "^4.17.19",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.7",
    "@types/lodash": "^4.14.158",
    "@types/node": "^14.0.26",
    "@types/yargs": "^15.0.5",
    "@zthun/lint-janitor": "^8.0.0",
    "jest": "^26.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
